                    <!--passive and profiency-->
                    <Label Text="Buffs" Grid.Row="10" TextColor="Goldenrod" Grid.Column="1" Grid.ColumnSpan="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="20" FontAttributes="Bold"/>
