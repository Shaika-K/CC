                    <Label Text="Skills" Grid.Row="18" TextColor="Goldenrod" Grid.Column="1" Grid.ColumnSpan="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="20" FontAttributes="Bold"/>
