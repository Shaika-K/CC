                        Placeholder="0" 
                        PlaceholderColor="LightGray"
                        FontSize="20"
                        HorizontalTextAlignment="Center"
                        TextColor="#161616"
                        FontFamily="RobotoSlab-Regular.ttf#RobotoSlab"
